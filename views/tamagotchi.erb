<!DOCTYPE html>
<html>
    <body>
        <div class="my-container">
            <img src="images/ambient.gif" class="gif">
                <center class="my-form">
                <a class="button-exit-tamagotchi" onClick="logout()"><i class="fa fa-sign-out fa-lg" aria-hidden="true"></i></a>
                <a class="button-exit-tamagotchi" onClick="mute()"><i class="fa fa-volume-off fa-lg" aria-hidden="true"></i></a>
                    <div class="div-status-bar">
                    <ul class="status-bar">
                        <li class="status">
                            <label for="health">HEALTH</label></br>
                            <progress class="progress_tamagotchi" value="100" max="100" id="health"></progress>
                        </li>
                         <li class="status">
                            <label for="happy">HAPPY</label></br>
                            <progress class="progress_tamagotchi" value="100" max="100" id="happy"></progress>
                        </li>
                        <li class="status">
                            <label for="hunger">HUNGER</label></br>
                            <progress class="progress_tamagotchi" value="100" max="100" id="hunger"></progress>
                        </li>
                         <li class="status">
                            <label for="tired">TIRED</label></br>
                            <progress class="progress_tamagotchi" value="100" max="100" id="energy"></progress>
                        </li>
                        <li class="status">
                            <label for="higiene">HIGIENE</label></br>
                            <progress class="progress_tamagotchi" value="100" max="100" id="higiene"></progress>
                        </li>
                    </ul>
                    </div>
                    <img class="gif-tamagotchi" id="pet">
                    <img class="gif-sleeping" src="images/sleeping.gif" id="sleeping">
                    <a class="name-pet" id="name"></a>
                     <div class="div-buttons">
                        <button class="button-circle" id="food" data-container="body" data-toggle="popover" data-placement="top"><i class="fa fa-cutlery" aria-hidden="true"></i></button>
                        <button class="button-circle" onClick="clean(30)"><i class="fa fa-bath" aria-hidden="true"></i></button>
                        <button class="button-circle" onClick="goSleep()"><i class="fa fa-bed" aria-hidden="true"></i></button>
                      <a href='/menu'><button class="button-circle-menu"><i class="fa fa-bars" aria-hidden="true"></i></button></a>
                        <button class="button-circle" id="game" data-container="body" data-toggle="popover" data-placement="top"><i class="fa fa-gamepad" aria-hidden="true"></i></button>
                        <button class="button-circle" id="info" data-container="body" data-toggle="popover" data-placement="top"><i class="fa fa-info" aria-hidden="true"></i></button>
                        <button class="button-circle" id="med" data-container="body" data-toggle="popover" data-placement="top"><i class="fa fa-medkit" aria-hidden="true"></i></i></button>
                    </div>
                <center>
                <div id="header-info" class="collapse">
                    <div class="header-pop">
                        <a>Info</a>
                    </div>
                </div>
                <div id="body-info" class="collapse">
                    <a class="font-pop">Name:&nbsp;</a>
                    <a class="font-pop"id="name1"></a></br>
                    <a class="font-pop">Stage:&nbsp;</a>
                    <a class="font-pop"id="state"></a></br>
                    <a class="font-pop">Weight: &nbsp;</a>
                    <a class="font-pop"id="weight"></a></br>
                    <a class="font-pop">Age: &nbsp;</a>
                    <a class="font-pop"id="age"></a>
                    <a class="font-pop">Days</a>
                </div>
                <div id="header-food" class="collapse">
                    <div class="header-pop">
                        <a>Food</a>
                    </div>
                </div>
                <div id="body-food" class="collapse">
                    <div class="body-food">
                        <img src="images/1.png" id="donuts" class="food" onclick="feed(10)" data-toggle="tooltip" data-placement="left" title="donuts">
                        <img src="images/2.png" id="pie" class="food" onclick="feed(20)" data-toggle="tooltip" data-placement="left" title="pie">
                        <img src="images/3.jpg" id="cake" class="food" onclick="feed(40)" data-toggle="tooltip" data-placement="left" title="cake">
                    </div>
                </div>
                 <div id="header-med" class="collapse">
                    <div class="header-pop">
                        <a>MedKit</a>
                    </div>
                </div>
                <div id="body-med" class="collapse">
                    <div class="body-food">
                        <img src="images/injection.gif" id="injection" class="food" onclick="heal(10)" data-toggle="tooltip" data-placement="left" title="injection">
                        <img src="images/pill.png" id="pill" class="food" onclick="heal(20)" data-toggle="tooltip" data-placement="left" title="pill">
                        <img src="images/sirup.gif" id="sirup.gif" class="food" onclick="heal(40)" data-toggle="tooltip" data-placement="left" title="sirup">
                    </div>
                </div>
                 <div id="header-game" class="collapse">
                    <div class="header-pop">
                        <a>Mini-Game</a>
                    </div>
                </div>
                <div id="body-game" class="collapse">
                    <div class="body-game">
                       <a href='/coin'><img src="images/coin.gif" id="coin" class="food" data-toggle="tooltip" data-placement="left" title="Heads and Tails"></a>
                        <a href='/jakenpo'><img src="images/jakenpo.png" id="jakenpo" class="food" onclick="heal(20)" data-toggle="tooltip" data-placement="left" title="Jakenpo"></a>
                        <a href='/battle'><img src="images/battle.gif" id="battle" class="food" onclick="heal(40)" data-toggle="tooltip" data-placement="left" title="Battle"></a>
                    </div>
                </div>
        </div>
        <script type="text/javascript" src="js/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="js/tamagotchi.js"></script>
    </body>
</html>